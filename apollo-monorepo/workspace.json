{
  "version": 1,
  "projects": {
    "federation": {
      "root": "packages/federation",
      "sourceRoot": "packages/federation/src",
      "projectType": "library",
      "schematics": {},
      "architect": {
        "lint": {
          "builder": "@nrwl/linter:lint",
          "options": {
            "linter": "eslint",
            "tsConfig": [
              "packages/federation/tsconfig.lib.json",
              "packages/federation/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**", "!packages/federation/**/*"]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "packages/federation/jest.config.js",
            "tsConfig": "packages/federation/tsconfig.spec.json",
            "passWithNoTests": true
          }
        },
        "build": {
          "builder": "@nrwl/node:package",
          "options": {
            "outputPath": "dist/packages/federation",
            "tsConfig": "packages/federation/tsconfig.lib.json",
            "packageJson": "packages/federation/package.json",
            "main": "packages/federation/src/index.ts",
            "assets": [
              "packages/federation/*.md",
              {
                "input": "./packages/federation/src",
                "glob": "**/*.!(ts)",
                "output": "./src"
              },
              {
                "input": "./packages/federation",
                "glob": "collection.json",
                "output": "."
              },
              {
                "input": "./packages/federation",
                "glob": "builders.json",
                "output": "."
              }
            ]
          }
        }
      }
    },
    "federation-e2e": {
      "projectType": "application",
      "root": "e2e/federation-e2e",
      "sourceRoot": "e2e/federation-e2e/src",
      "architect": {
        "e2e": {
          "builder": "@nrwl/nx-plugin:e2e",
          "options": {
            "target": "federation:build",
            "npmPackageName": "@apollo-monorepo/federation",
            "pluginOutputPath": "dist/packages/federation",
            "jestConfig": "e2e/federation-e2e/jest.config.js",
            "tsSpecConfig": "e2e/federation-e2e/tsconfig.spec.json"
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/workspace"
  },
  "schematics": {
    "@nrwl/workspace": {
      "library": {
        "linter": "eslint"
      }
    },
    "@nrwl/cypress": {
      "cypress-project": {
        "linter": "eslint"
      }
    },
    "@nrwl/react": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      },
      "storybook-configuration": {
        "linter": "eslint"
      }
    },
    "@nrwl/next": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nrwl/web": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nrwl/node": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      }
    },
    "@nrwl/nx-plugin": {
      "plugin": {
        "linter": "eslint"
      }
    },
    "@nrwl/nest": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nrwl/express": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      }
    }
  }
}
